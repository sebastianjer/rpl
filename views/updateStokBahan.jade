doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', type='text/css')
    link(rel='stylesheet', href='https://static.pingendo.com/bootstrap/bootstrap-4.1.3.css')
  body
    .py-5.text-center.bg-primary.text-white
      .container
        .row
          .p-5.col-lg-6.col-10.mx-auto.border
            h1.mb-4 Update Stok Bahan
            form(action='/stok/update', method='post')
              .form-group
                input#form15.form-control.text-center(placeholder='Nama Bahan',name='material_name', type='text')
                small.form-text.text-muted.text-right
              .form-group
                input#form15.form-control.text-center(placeholder='Jumlah',name='stock' type='number')
                small.form-text.text-muted.text-right
              button.btn.w-100.btn-secondary(type='submit') Submit
        br
        form(action="/stok/bahan", method="GET")
          button.btn.btn-primary(type='submit', style="width:25%") Close

    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
